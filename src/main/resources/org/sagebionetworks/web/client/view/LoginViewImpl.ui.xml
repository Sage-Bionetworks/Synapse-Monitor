<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" >

    <ui:style>
    </ui:style>

    <g:HTMLPanel>
        <div class="ym-grid" >
            <!-- This is the left place holder -->
            <div class="ym-g33 ym-gl"><p></p></div>
            <!-- The form is in the middle -->
            <div class="ym-g33 ym-gl" >
                <form class="ym-form ym-full" action="/monitor/service/login" method="get" ui:field="formPanel">
                    <h6>Login to Synapse</h6>
                    <div class="ym-fbox-text" >
                        <label for="userNameInput" >username<sup class="ym-required" >*</sup></label>
                        <input type="text" name="username" ui:field="userNameInput" size="20" required="required"/>
                    </div>
                    <div class="ym-fbox-text" >
                        <label for="userPassword" >password<sup class="ym-required" >*</sup></label>
                        <input type="password" name="password" ui:field="passwordInput" size="20" required="required"/>
                    </div>
                    <div class="ym-fbox-button" >
                        <input type="submit" class="ym-button" value="submit" ui:field="loginButton" name="Login" />
                    </div>
                </form>
            </div>
			<!-- The right place holder -->
            <div class="ym-g33 ym-gl" ><p></p></div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>